---
import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import meData from '../data/me.json';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  canonical?: string;
  noindex?: boolean;
}

const seo = meData.seo;
const { 
  title = seo.defaultTitle,
  description = seo.defaultDescription,
  image = seo.image,
  imageAlt = seo.imageAlt,
  canonical,
  noindex = false
} = Astro.props;

const fullTitle = title === seo.defaultTitle ? title : `${title} | ${meData.name}`;
const fullImageUrl = image.startsWith('http') 
  ? image 
  : `${seo.siteUrl}${image.startsWith('/') ? image : `/${image}`}`;
const canonicalUrl = canonical || (typeof Astro.url !== 'undefined' ? Astro.url.href : seo.siteUrl);
const keywords = seo.keywords.join(', ');
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    
    {/* Primary Meta Tags */}
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={seo.author} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    {/* Canonical URL */}
    <link rel="canonical" href={canonicalUrl} />
    
    {/* Open Graph / Facebook */}
    <meta property="og:type" content={seo.og.type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:alt" content={imageAlt} />
    <meta property="og:locale" content={seo.og.locale} />
    <meta property="og:site_name" content={meData.name} />
    
    {/* Twitter */}
    <meta name="twitter:card" content={seo.twitter.card} />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    <meta name="twitter:image:alt" content={imageAlt} />
    {seo.twitter.handle && <meta name="twitter:creator" content={seo.twitter.handle} />}
    
    {/* Structured Data */}
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": meData.name,
      "jobTitle": meData.title,
      "url": seo.siteUrl,
      "image": fullImageUrl,
      "sameAs": [
        meData.social.github,
        meData.social.linkedin
      ],
      "email": meData.social.email,
      "description": description
    })} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    {!import.meta.env.DEV && (
      <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    )}
    <script is:inline>
      // Set dark mode before page renders to prevent flash
      // Dark mode is default, only use light if explicitly set in localStorage
      const theme = localStorage.getItem('theme');
      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col transition-colors duration-200">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
