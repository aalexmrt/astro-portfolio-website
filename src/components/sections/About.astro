---
import me from '../../data/me.json';
---

<section id="about" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-zinc-900 dark:text-white">
        {me.about.title}
      </h2>
      <div class="w-16 h-0.5 bg-indigo-600 dark:bg-indigo-500 mx-auto"></div>
    </div>

    {/* Photo + Bio Section */}
    <div class="grid md:grid-cols-2 gap-12 items-center">
      {/* Photo */}
      <div class="flex justify-center md:justify-start order-2 md:order-1">
        <div class="relative w-72 h-72 md:w-80 md:h-80 lg:w-[22rem] lg:h-[22rem] rounded-2xl overflow-hidden border-4 border-indigo-200 dark:border-indigo-800 shadow-lg bg-gradient-to-br from-indigo-100 to-blue-100 dark:from-indigo-900/30 dark:to-blue-900/30 flex-shrink-0">
          <img
            src="/images/profile.webp"
            alt="Alex Martinez"
            class="w-full h-full object-cover object-[90%_30%]"
            loading="lazy"
            onerror="this.classList.add('hidden'); this.nextElementSibling.classList.remove('hidden');"
          />
          <span class="hidden absolute inset-0 flex items-center justify-center text-indigo-400 dark:text-indigo-300 text-7xl font-bold">AM</span>
        </div>
      </div>

      {/* Bio */}
      <div class="order-1 md:order-2">
        {me.about.bio.map((paragraph) => (
          <p class="text-lg leading-relaxed text-zinc-900 dark:text-white mb-6">
            {paragraph}
          </p>
        ))}
      </div>
    </div>
  </div>
</section>
