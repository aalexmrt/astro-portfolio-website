---
interface Experience {
  company: string;
  role: string;
  period: string;
  description: string[];
  technologies: string[];
}

const experiences: Experience[] = [
  {
    company: 'OpenQ',
    role: 'Full-Stack Engineer',
    period: '2024 - Present',
    description: [
      'Core engineer building OpenQ DRM, an AI-powered developer relationship management platform analyzing GitHub repositories, contributors, and dependencies',
      'Full-stack development across DRM frontend (Next.js 15, TypeScript, tRPC, Tailwind) and backend evaluator services (Node.js, Kafka, PostgreSQL)',
      'Coordinated repository synchronization, batch evaluation, and analytics visualization for open-source ecosystem insights',
      'Designed and maintained GoGitguru backend data pipeline (Go 1.22, PostgreSQL, Kafka) feeding GitHub data into DRM analytics',
      'Built Geist AI conversational product: implemented pricing/negotiation system, SSE streaming chat, RevenueCat integration, and Kubernetes deployments',
      'Managed Helm chart deployments for production clusters with GPU acceleration (NVIDIA Operator)'
    ],
    technologies: ['Next.js', 'TypeScript', 'tRPC', 'Node.js', 'Go', 'PostgreSQL', 'MongoDB', 'Kafka', 'Kubernetes', 'Docker', 'Helm', 'GitHub Actions', 'Python', 'FastAPI', 'React Native', 'Prisma']
  },
  {
    company: 'Stackless Data',
    role: 'Full-Stack Engineer',
    period: '2023 - Present (Part-time)',
    description: [
      'Contributed to full-stack data insights platform with analytics dashboards and BI integrations',
      'Developed onboarding flows, user/role management, and dbt transformations for data pipelines',
      'Built frontend components with React, TypeScript, Mantine, and Tailwind',
      'Implemented backend services with Python FastAPI, dbt, and Alembic for database migrations',
      'Integrated GoodData BI platform and deployed on AWS infrastructure (Lambda, EC2, Cognito, Amplify)'
    ],
    technologies: ['React', 'TypeScript', 'Python', 'FastAPI', 'dbt', 'PostgreSQL', 'AWS', 'Docker', 'Mantine', 'Tailwind CSS']
  }
];
---

<section id="experience" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-zinc-900 dark:text-white">
        Experience
      </h2>
      <div class="w-16 h-0.5 bg-cyan-600 dark:bg-cyan-500 mx-auto"></div>
    </div>

    <div class="space-y-8">
      {experiences.map((exp) => (
        <div class="border border-zinc-200 dark:border-zinc-700 rounded-lg p-8 bg-white dark:bg-zinc-800">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
            <div>
              <h3 class="text-xl font-bold text-zinc-900 dark:text-white mb-1">{exp.role}</h3>
              <p class="text-base text-zinc-900 dark:text-white">{exp.company}</p>
            </div>
            <span class="text-sm font-medium text-cyan-600 dark:text-cyan-400 mt-2 md:mt-0">{exp.period}</span>
          </div>
          
          <ul class="space-y-2 text-zinc-900 dark:text-white mb-6">
            {exp.description.map((item) => (
              <li class="flex items-start">
                <span class="text-cyan-600 dark:text-cyan-400 mr-3">â€¢</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
          
          <div class="flex flex-wrap gap-2">
            {exp.technologies.map((tech) => (
              <span class="px-3 py-1 bg-zinc-100 dark:bg-zinc-700 text-zinc-900 dark:text-white rounded text-sm">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
