---
import me from '../../data/me.json';
import ExperienceComponent from './Experience';
---

<section id="experience" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-zinc-900 dark:text-white">
        {me.experience.title}
      </h2>
      <div class="w-16 h-0.5 bg-indigo-600 dark:bg-indigo-500 mx-auto"></div>
    </div>

    <ExperienceComponent client:load items={me.experience.items} />
  </div>
</section>
