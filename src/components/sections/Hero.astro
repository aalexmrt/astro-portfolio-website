---
import me from '../../data/me.json';
---

<style>
  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-slide-in-up {
    animation: slideInUp 0.6s ease-out forwards;
  }

  .animate-slide-in-left {
    animation: slideInLeft 0.6s ease-out 0.1s forwards;
    opacity: 0;
  }

  .animate-slide-in-right {
    animation: slideInRight 0.6s ease-out 0.1s forwards;
    opacity: 0;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .accent-bar-left {
    animation: slideInLeft 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }

  .accent-bar-right {
    animation: slideInRight 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }

  .gradient-bg {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.05) 0%, rgba(79, 70, 229, 0.05) 50%, rgba(59, 130, 246, 0.05) 100%);
  }
</style>

<section id="hero" class="min-h-screen flex items-center justify-center pt-28 px-4 sm:px-6 lg:px-8 relative overflow-hidden gradient-bg">
  {/* Animated background elements */}
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute top-20 left-10 w-72 h-72 bg-indigo-300/5 dark:bg-indigo-500/5 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-300/5 dark:bg-blue-500/5 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
  </div>

  <div class="w-full max-w-6xl mx-auto relative">
    <div class="text-center space-y-8">
      {/* Accent bar - left */}
      <div class="accent-bar-left flex justify-center">
        <div class="h-1 w-12 bg-gradient-to-r from-indigo-600 to-indigo-500 rounded-full"></div>
      </div>

      <div class="space-y-6">
        <h1 class="animate-slide-in-up text-5xl md:text-7xl font-bold bg-gradient-to-r from-zinc-900 via-indigo-700 to-zinc-900 dark:from-white dark:via-indigo-300 dark:to-white bg-clip-text text-transparent tracking-tight leading-tight">
          {me.hero.name}
        </h1>
        <p class="animate-slide-in-left text-xl md:text-2xl text-zinc-900 dark:text-white font-medium opacity-0">
          {me.hero.title}
        </p>
        <div class="flex justify-center w-full pt-2">
          <p class="animate-slide-in-right text-base md:text-lg text-zinc-600 dark:text-zinc-300 max-w-2xl mx-auto leading-relaxed opacity-0">
            {me.hero.tagline}
          </p>
        </div>
      </div>

      {/* Accent bar - right */}
      <div class="accent-bar-right flex justify-center">
        <div class="h-1 w-12 bg-gradient-to-r from-indigo-500 to-indigo-600 rounded-full"></div>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-8 animate-slide-in-up" style="animation-delay: 0.3s; opacity: 0;">
        <a href={me.hero.cta.primary.href} class="px-8 py-3 bg-gradient-to-r from-indigo-600 to-indigo-500 dark:from-indigo-500 dark:to-indigo-600 text-white rounded-lg font-semibold hover:shadow-lg hover:shadow-indigo-600/30 hover:scale-105 transition-all duration-200 active:scale-95">
          {me.hero.cta.primary.text}
        </a>
        <a href={me.hero.cta.secondary.href} class="px-8 py-3 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white border-2 border-zinc-300 dark:border-zinc-700 rounded-lg font-semibold hover:border-indigo-500 dark:hover:border-indigo-400 hover:text-indigo-600 dark:hover:text-indigo-400 hover:bg-indigo-50 dark:hover:bg-zinc-700/50 transition-all duration-200">
          {me.hero.cta.secondary.text}
        </a>
      </div>
    </div>
  </div>
</section>
